{
    "compilerOptions": {
        "target": "ES2022",
        "module": "ESNext",
        "moduleResolution": "bundler",
        "esModuleInterop": true,
        "strict": false,
        "noImplicitAny": false,
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "declaration": false,
        "outDir": "dist",
        "rootDir": "..",
        "types": [
            "vitest/globals",
            "@playwright/test",
            "node"
        ]
    },
    "include": [
        "./**/*.ts",
        "./**/*.tsx"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}