{
    "name": "xalabase",
    "version": "0.1.0",
    "private": true,
    "description": "XalaBaaS - Convex-powered multi-tenant Backend-as-a-Service kernel",
    "type": "module",
    "workspaces": [
        "packages/*",
        "apps/*"
    ],
    "scripts": {
        "dev": "concurrently \"npx convex dev\" \"pnpm --filter @xalabaas/web dev\" \"pnpm --filter @xalabaas/backoffice dev\" \"pnpm --filter @xalabaas/minside dev\" \"pnpm --filter @xalabaas/dev-docs dev\"",
        "dev:convex": "npx convex dev",
        "dev:web": "pnpm --filter @xalabaas/web dev",
        "dev:backoffice": "pnpm --filter @xalabaas/backoffice dev",
        "dev:minside": "pnpm --filter @xalabaas/minside dev",
        "dev:dev-docs": "pnpm --filter @xalabaas/dev-docs dev",
        "dev:all": "concurrently \"pnpm dev:convex\" \"pnpm dev:web\" \"pnpm dev:backoffice\" \"pnpm dev:minside\"",
        "sdk:build": "echo 'SDK is source-only, no build needed'",
        "sdk:test": "pnpm --filter @xalabaas/sdk test",
        "lint": "npm run lint -ws --if-present",
        "typecheck": "npm run typecheck -ws --if-present",
        "test": "npm run test -ws --if-present",
        "test:convex": "cd tests && npx vitest run",
        "test:convex:watch": "cd tests && npx vitest",
        "test:convex:e2e": "tsx tests/convex/e2e/runner.ts",
        "test:convex:e2e:coverage": "tsx tests/convex/e2e/runner.ts --coverage",
        "test:convex:e2e:watch": "tsx tests/convex/e2e/runner.ts --watch",
        "test:convex:e2e:all": "tsx tests/convex/e2e/run-all.ts",
        "test:convex:e2e:parallel": "tsx tests/convex/e2e/run-all.ts --parallel",
        "test:convex:e2e:journeys": "tsx tests/convex/e2e/run-all.ts --suite user-journeys",
        "test:convex:e2e:performance": "tsx tests/convex/e2e/run-all.ts --suite performance",
        "test:convex:e2e:edge-cases": "tsx tests/convex/e2e/run-all.ts --suite edge-cases",
        "test:e2e": "playwright test tests/e2e",
        "test:all": "pnpm sdk:test && pnpm test:convex && pnpm test:convex:e2e:all && pnpm test:e2e",
        "seed:test": "npx ts-node scripts/seed-test-tenant.ts"
    },
    "devDependencies": {
        "@digdir/designsystemet-css": "^1.0.0",
        "@digdir/designsystemet-react": "^1.9.0",
        "@playwright/test": "^1.45.0",
        "@types/node": "^20.14.0",
        "@types/uuid": "^10.0.0",
        "concurrently": "^8.2.0",
        "puppeteer": "^24.36.1",
        "ts-node": "^10.9.0",
        "tsx": "^4.7.0",
        "typescript": "^5.4.5",
        "uuid": "^10.0.0",
        "vitest": "^2.0.0"
    },
    "engines": {
        "node": ">=20.0.0"
    },
    "author": "Xala Technologies",
    "license": "UNLICENSED",
    "dependencies": {
        "convex": "^1.31.7",
        "convex-helpers": "^0.1.111",
        "convex-test": "^0.0.33"
    },
    "pnpm": {
        "patchedDependencies": {
            "@xala-technologies/platform-ui": "patches/@xala-technologies__platform-ui.patch"
        }
    }
}