{
    "name": "@xalabaas/app-shell",
    "version": "0.0.1",
    "description": "Shared app shell - providers, auth, tenant context, routing helpers",
    "type": "module",
    "main": "./src/index.ts",
    "types": "./src/index.ts",
    "exports": {
        ".": {
            "import": "./src/index.ts",
            "types": "./src/index.ts"
        }
    },
    "scripts": {
        "build": "tsup",
        "build:dts": "tsc --emitDeclarationOnly --declaration --outDir dist",
        "dev": "tsup src/index.ts --format esm --watch",
        "lint": "eslint .",
        "typecheck": "tsc --noEmit"
    },
    "dependencies": {
        "@xala-technologies/platform-ui": "^2.0.0",
        "@xalabaas/i18n": "workspace:*",
        "@xalabaas/sdk": "workspace:*",
        "@xalabaas/shared": "workspace:*",
        "convex": "^1.21.0",
        "react": "^18.2.0"
    },
    "devDependencies": {
        "@types/react": "^18.3.27",
        "tsup": "^8.0.0",
        "typescript": "^5.3.0"
    },
    "peerDependencies": {
        "react": "^18.2.0"
    }
}